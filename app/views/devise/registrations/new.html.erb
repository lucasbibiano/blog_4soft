<div class="row">
  <div class="span12"> 
    <h2>Registro</h2>

    <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
      <%= devise_error_messages! %>

      <div><%= f.label :name, "Digite seu nome" %><br />
      <%= f.text_field :name %></div>

      <div><%= f.label :email, "Digite seu email" %><br />
      <%= f.email_field :email %></div>

      <div><%= f.label :password, "Digite sua senha" %><br />
      <%= f.password_field :password %></div>

      <div><%= f.label :password_confirmation, "Digite sua senha novamente"%><br />
      <%= f.password_field :password_confirmation %></div>

      <div><%= f.submit "Confirmar registro" %></div>
      <br />
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>